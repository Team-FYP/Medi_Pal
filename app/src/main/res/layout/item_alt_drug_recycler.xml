<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    >
    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/txt_alt_drug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fancy:mfb_radius="3dp"
        fancy:mfb_textSize="15sp"
        fancy:mfb_textFont="fontawesome.ttf"
        fancy:mfb_text="@string/txt_show_alternatives"
        fancy:mfb_defaultColor="@color/met_baseColor"
        fancy:mfb_textColor="@color/white"
        fancy:mfb_borderWidth="2dp"
        fancy:mfb_borderColor="@color/met_baseColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:padding="7dp"
        >

    </com.rilixtech.materialfancybutton.MaterialFancyButton>
</RelativeLayout>

