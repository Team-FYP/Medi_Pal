<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="lk.ac.mrt.cse.medipal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MedipalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.patient.DoctorMainActivity"
            android:theme="@style/doctor_main"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".view.patient.PatientMainActivity" />
        <activity android:name=".view.UserTypeSelectionActivity" />
        <activity
            android:name=".view.patient.DoctorRegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.patient.PatientRegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".view.patient.PatientInfoActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->
        <activity
            android:name=".view.patient.PrescribingActivity"
            android:windowSoftInputMode="stateHidden|adjustNothing" />
        <activity android:name=".view.patient.PrescriptionDrugSelectionActivity" />
        <activity android:name=".view.patient.PrescriptionViewActivity" />
        <activity android:name=".view.patient.DoctorViewActivity"></activity>
    </application>

</manifest>